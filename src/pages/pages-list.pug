							li.intro-page__item
								a(href="catalog" target="_blank") catalog

							li.intro-page__item
								a(href="clients" target="_blank") clients

							li.intro-page__item
								a(href="commodity" target="_blank") commodity

							li.intro-page__item
								a(href="contacts" target="_blank") contacts

							li.intro-page__item
								a(href="news-page" target="_blank") news-page

							li.intro-page__item
								a(href="news" target="_blank") news

							li.intro-page__item
								a(href="photo-gallery" target="_blank") photo-gallery

							li.intro-page__item
								a(href="404" target="_blank") 404

		include include/script.pug