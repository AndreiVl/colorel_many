html(lang="ru")
	include include/head.pug
	+head('Zen mobile agency')

	body
		include ../blocks/mixins.pug
		div.intro-page
			div.container
				div.row.justify-content-center
					div.col-12.col-lg-6
						div.intro-page__top
							+logo({img: 'logo.png'})

						ul.intro-page__list
							li.intro-page__item
